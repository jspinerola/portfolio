---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardTitle,
} from "@/components/ui/card";
import LinkButton from "@/components/LinkButton.tsx";
const { projectTitle, projectDescription, heroImage, link, accentColor } =
  Astro.props;
---

<div>
  <Card
    className={`
      group relative overflow-hidden rounded-xl h-full pt-0 justify-between
      transition-all duration-300 ease-out hover:scale-[1.02]
    `}
  >
    <div
      class="z-0 absolute inset-x-0 bottom-0 h-1/2 pointer-events-none opacity-0 group-hover:opacity-20 transition-opacity duration-300"
      style={`background: linear-gradient(to top, ${accentColor}, transparent);`}
    >
    </div>
    <div class="relative z-10">
      {
        heroImage && (
          <img
            src={heroImage}
            alt={`${projectTitle} Hero Image`}
            class="w-full h-48 object-cover rounded-md "
            style={`border-color: ${accentColor}`}
          />
        )
      }
      <div
        class="text-center pt-4 border-t-2"
        style={`border-color: ${accentColor}`}
      >
        <CardContent>
          <CardTitle className="text-2xl font-extrabold font-heading"
            >{projectTitle}</CardTitle
          >
          <CardDescription>{projectDescription}</CardDescription>
        </CardContent>
      </div>
    </div>
    <CardFooter className="z-10">
      <LinkButton className="btn w-full" href={link} target="_blank">
        View Project
      </LinkButton>
    </CardFooter>
  </Card>
</div>
